{
  "name": "soridam-design-system",
  "description": "A design system for Soridam project",
  "private": false,
  "version": "0.1.32",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./styles": "./dist/index.css"
  },
  "scripts": {
    "dev:app": "next dev",
    "build:app": "next build",
    "start:app": "next start",
    "build:ts": "tsup",
    "build:css": "npx tailwindcss -i ./src/globals.css -o ./dist/index.css --content './src/**/*.{ts,tsx}' --minify",
    "build": "npm run build:ts && npm run build:css",
    "lint": "next lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "next": "^15.4.5",
    "framer-motion": "^12.23.12"
  },
  "dependencies": {
    "next": "15.4.5",
    "react": "19.1.0",
    "react-circular-progressbar": "^2.2.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "^9.1.1",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-themes": "^9.1.1",
    "@storybook/addon-vitest": "^9.1.1",
    "@storybook/nextjs": "^9.1.1",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chromatic": "^13.1.3",
    "cross-spawn": "^7.0.6",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-plugin-storybook": "^9.1.1",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "storybook": "^9.1.1",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
